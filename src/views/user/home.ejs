<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= t('home.title') %>
  </title>
  <link rel="stylesheet" href="/stylesheets/bootstrap.css" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <link rel="stylesheet" href="/stylesheets/home.css" />
  <link rel="icon" href="/images/kfc-logo.jpg" type="image/jpeg">
</head>

<body>
  <%- include('../layouts/users/header') -%>
    <div class="container mt-4">
      <div class="row">
        <div class="col-md-12">
          <form action="/products/search" id="search-product-form" method="get" class="mb-4">
            <div class="input-group mb-3">
              <input type="text" class="form-control rounded" placeholder="<%=t('home.search.placeHolder')%>" name="keyword">
              <div class="input-group-append">
                <button type="submit" class="btn btn-lg" type="button"><img src="/images/search-icon.png" class="search-icon"
                    alt="search icon"></button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <% if(suggestionProduct.length > 0) { %>
        <h3 class="mb-4 text-danger">
          <%= t('home.suggestionProduct') %>
        </h3>
        <div class="row g-4 mb-4">
          <% suggestionProduct.forEach((product)=> { %>
            <div class="col-md-3">
              <div class="card">
                <a href="/products/<%= product.id %>">
                  <img src="<%= product.image %>" class="card-img-top" alt="Product Image">
                </a>
                <div class="card-body">
                  <a href="/products/<%= product.id %>">
                    <h5 class="card-title">
                      <%= product.name %>
                    </h5>
                  </a>
                  <div class="d-flex justify-content-left mb-2">
                    <p class="card-price">
                      <%= formatCurrency(product.currentPrice) %>
                    </p>
                    <% if(product.basePrice!==product.currentPrice) { %>
                      <p class="card-old-price">
                        <%= formatCurrency(product.basePrice) %>
                      </p>
                      <% } %>
                  </div>
                  <p class="star">
                    <% for(let k=0; k < product.averageRating; k++) { %>
                      ★
                      <% } %>
                  </p>
                  <p class="card-text">
                    <%= product.description %>
                  </p>
                </div>
                <button type="submit" class="btn btn-primary addToCartBtn" onclick="addToCart(event, '<%= product.id %>')">
                  <strong>
                    <%= t('home.addToCartBtn') %>
                  </strong>
                </button>
              </div>
            </div>
            <% }) %>
        </div>
      <% } %>
      <a href="/products/search?sortField=createdAt&order=DESC" class="link-danger link-offset-2 link-underline-opacity-0 link-opacity-50-hover">
        <h3 class="mb-4">
          <%= t('home.newProduct') %>
        </h3>
      </a>
      <div class="row g-4 mb-4">
        <% newProduct.forEach((product)=> { %>
          <div class="col-md-3">
            <div class="card">
              <a href="/products/<%= product.id %>">
                <img src="<%= product.image %>" class="card-img-top" alt="Product Image">
              </a>
              <div class="card-body">
                <a href="/products/<%= product.id %>">
                  <h5 class="card-title">
                    <%= product.name %>
                  </h5>
                </a>
                <div class="d-flex justify-content-left mb-2">
                  <p class="card-price">
                    <%= formatCurrency(product.currentPrice) %>
                  </p>
                  <% if(product.basePrice!==product.currentPrice) { %>
                    <p class="card-old-price">
                      <%= formatCurrency(product.basePrice) %>
                    </p>
                    <% } %>
                </div>
                <p class="star">
                  <% for(let k=0; k < product.averageRating; k++) { %>
                    ★
                    <% } %>
                </p>
                <p class="card-text">
                  <%= product.description %>
                </p>
              </div>
              <button type="submit" class="btn btn-primary addToCartBtn" onclick="addToCart(event, '<%= product.id %>')">
                <strong>
                  <%= t('home.addToCartBtn') %>
                </strong>
              </button>
            </div>
          </div>
          <% }) %>
      </div>
      <a href="/products/search?onSale=true" class="link-danger link-offset-2 link-underline-opacity-0 link-opacity-50-hover">
        <h3 class="mb-4">
          <%= t('home.discount') %>
        </h3>
      </a>
      <div class="row g-4 mb-4">
        <% discountProduct.forEach((product)=> { %>
          <div class="col-md-3">
            <div class="card">
              <a href="/products/<%= product.id %>">
                <img src="<%= product.image %>" class="card-img-top" alt="Product Image">
              </a>
              <div class="card-body">
                <a href="/products/<%= product.id %>">
                  <h5 class="card-title">
                    <%= product.name %>
                  </h5>
                </a>
                <div class="d-flex justify-content-left mb-2">
                  <p class="card-price">
                    <%= formatCurrency(product.currentPrice) %>
                  </p>
                  <% if(product.basePrice!==product.currentPrice) { %>
                    <p class="card-old-price">
                      <%= formatCurrency(product.basePrice) %>
                    </p>
                    <% } %>
                </div>
                <p class="star">
                  <% for(let k=0; k < product.averageRating; k++) { %>
                    ★
                    <% } %>
                </p>
                <p class="card-text">
                  <%= product.description %>
                </p>
              </div>
              <button type="submit" class="btn btn-primary addToCartBtn" onclick="addToCart(event, '<%= product.id %>')">
                <strong>
                  <%= t('home.addToCartBtn') %>
                </strong>
              </button>
            </div>
          </div>
          <% }) %>
      </div>
      <% data.forEach((item)=> { %>
        <a href="/products/search?categoryIds=<%=item.categoryId%>" class="link-danger link-offset-2 link-underline-opacity-0 link-opacity-50-hover">
          <h3 class="mb-4">
            <%= item.category %>
          </h3>
        </a>
        <div class="row g-4">
          <% item.products.forEach((product)=> { %>
            <div class="col-md-3 mb-4">
              <div class="card">
                <a href="/products/<%= product.id %>">
                  <img src="<%= product.image %>" class="card-img-top" alt="Product Image">
                </a>
                <div class="card-body">
                  <a href="/products/<%= product.id %>">
                    <h5 class="card-title">
                      <%= product.name %>
                    </h5>
                  </a>
                  <div class="d-flex justify-content-left mb-2">
                    <p class="card-price">
                      <%= formatCurrency(product.currentPrice) %>
                    </p>
                    <% if(product.basePrice!==product.currentPrice) { %>
                      <p class="card-old-price">
                        <%= formatCurrency(product.basePrice) %>₫
                      </p>
                      <% } %>
                  </div>
                  <p class="star">
                    <% for(let k=0; k < product.averageRating; k++) { %>
                      ★
                      <% } %>
                  </p>
                  <p class="card-text">
                    <%= product.description %>
                  </p>
                </div>
                <button type="submit" class="btn btn-primary addToCartBtn" onclick="addToCart(event, '<%= product.id %>')">
                  <strong>
                    <%= t('home.addToCartBtn') %>
                  </strong>
                </button>
              </div>
            </div>
            <% }) %>
        </div>
        <% }) %>
    </div>
</body>
<script src="/scripts/jquery.min.js"></script>
<script src="/scripts/bootstrap.bundle.min.js"></script>
<script src="/scripts/slim.min.js"></script>
<script src="/scripts/header.js"></script>
<script src="/scripts/utils.js"></script>
<script src="/scripts/sweetalert.min.js"></script>
<script src="/scripts/cart.js"></script>
</html>
